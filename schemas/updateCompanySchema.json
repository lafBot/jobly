{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "handle": "APP",
            "name": "Apples",
            "num_employees": 10000,
            "description": "A computer developer",
            "logo_url": "https://apple-logo.jpg"
        }
    ],
    "required": [
        "name",
        "num_employees",
        "description",
        "logo_url"
    ],
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name schema",
            "description": "The name of the company providing goods/services.",
            "default": "",
            "examples": [
                "Apples"
            ]
        },
        "num_employees": {
            "$id": "#/properties/num_employees",
            "type": "integer",
            "title": "The num_employees schema",
            "description": "The number of employees within the company.",
            "default": 0,
            "examples": [
                10000
            ]
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description schema",
            "description": "The description of the goods/services the company provides.",
            "default": "",
            "examples": [
                "A computer developer"
            ]
        },
        "logo_url": {
            "$id": "#/properties/logo_url",
            "type": "string",
            "title": "The logo_url schema",
            "description": "The url location of the logo representing the company.",
            "default": "",
            "examples": [
                "https://apple-logo.jpg"
            ]
        }
    },
    "additionalProperties": true
}